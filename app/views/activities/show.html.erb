<p id="notice alert alert-success"><%= notice %></p>
<div class="">
  <h3><u>Activity:</u> <%= @activity.name %></h3>
  <span class="badge badge-info" title="How many time in all this activity have been logged by YOU ?">
    <span class="material-icons">person</span>
    <%= @activity.users_activities.find_all{|n| n.user.id==current_user.id}.size %>
  </span>
  <span class="badge badge-info" title="How many time in all this activity have been logged by OUR USERS ?">
    <span class="material-icons">people_alt</span>
    <%= @activity.users_activities.size %>
  </span>
  <p><%= @activity.description %></p>
</div>
<div class="row">
  <%#= link_to 'Unsuscribe', {controller: "activities", action: "unsubscribe", id: @activity}, class: "btn btn-warning", data: { confirm: 'Are you sure?' } if current_user.activities.include? @activity %>
  <%= link_to 'Back', user_activity_index_path, class: "btn btn-dark" %>
  <div class="float-right">
    <% if !current_user.email.index("admin").nil? %>
      <button class="btn btn-light"><%= link_to 'Edit', edit_activity_path(@activity) %></button>
      <button class="btn btn-info float-right"><%= link_to 'Create an other one ?', edit_activity_path(@activity) %></button>
    <% end %>
  </div>
</div>
