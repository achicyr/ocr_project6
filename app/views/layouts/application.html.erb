<!DOCTYPE html>
<html>
  <head>
    <title>OcrProject6</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
  </head>
  <body id="<%= "controller_"+controller_name %>" class="<%= "container action_"+params[:action] %>">
    <header class="mb-3">
      <%= render "layouts/components/navbar", type: "header" %>
      <% if notice %>
        <p id="notice" class="text-center bg-success py-3"><%= notice %></p>
      <% end %>
  	</header>
    <%= render "jumbotron" if current_page? root_path %>
  	<main>
      <%= yield %>
  	</main>
    <%= render "layouts/footer" %>
  </body>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag controller_name, 'data-turbolinks-track': 'reload' if ["home","application","activities"].include?(controller_name) %>
</html>
